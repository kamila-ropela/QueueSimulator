@model IEnumerable<QueueSimulator.Models.Patient>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PatientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr style='background-color: @(item.Priority.Equals(1) ? "#ee2c2c" : item.Priority.Equals(2) ? "#ff6f50" : item.Priority.Equals(3) ? "#ffd700" : "#66cd00");'>
            <td>
                @Html.DisplayFor(modelItem => item.PatientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                <button id="info" style="float: right;" name="info" 
                        class="info btn btn-success btn-sm glyphicon glyphicon-option-horizontal"
                        onclick="showPopup(@item.Id)"> </button>
            </td>
        </tr>
}
    </tbody>
</table>
