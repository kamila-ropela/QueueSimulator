@model QueueSimulator.Models.Patient

@{
    ViewData["Title"] = "AddPatient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <br>
    <input type="button" value="dodaj losowego pacjenta" onclick="@("window.location.href='" + @Url.Action("AddRandomPatients", "Simulation", "1") + "'");" class="btn btn-info" />
    <input type="button" value="dodaj pacjenta z bazy" onclick="@("window.location.href='" + @Url.Action("AddRandomPatientFromDB", "Simulation") + "'");" class="btn btn-info" />
    <br><br>
</div>

<div class="row">
    <form asp-action="AddPatient">

        <div class="form-group row">
            <label for="PatientName" class="col-sm-2 col-form-label">Nazwa pacjenta</label>
            <div class="col-sm-5">
                <input type="text" name="PatientName" class="form-control" placeholder="Nazwa pacjenta">
            </div>
        </div>
        <fieldset class="form-group">
            <div class="row">
                <label class="col-sm-2 col-form-label">Płeć</label>
                <div class="col-sm-5">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Plec" value="1" checked>
                        <label class="form-check-label" for="Plec">
                            Kobieta
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Plec" value="0">
                        <label class="form-check-label" for="Plec">
                            Mężczyzna
                        </label>
                    </div>
                </div>
            </div>
        </fieldset>
        <fieldset class="form-group">
            <div class="row">
                <label class="col-sm-2 col-form-label">Drożne drogi oddechowe</label>
                <div class="col-sm-5">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="DrogiOddechowe" value="1" checked>
                        <label class="form-check-label" for="DrogiOddechowe">
                            Yes
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="DrogiOddechowe" value="0">
                        <label class="form-check-label" for="DrogiOddechowe">
                            No
                        </label>
                    </div>
                </div>
            </div>
        </fieldset>
        <div class="form-group row">
            <label for="CzestoscOddechow" class="col-sm-2 col-form-label">Częstość oddechów</label>
            <div class="col-sm-5">
                <input type="text" name="CzestoscOddechow" class="form-control" placeholder="Częstość oddechów">
            </div>
        </div>
        <div class="form-group row">
            <label for="Pulsoksymetria" class="col-sm-2 col-form-label">Pulsoksymetria</label>
            <div class="col-sm-5">
                <input type="text" name="Pulsoksymetria" class="form-control" placeholder="Pulsoksymetria">
            </div>
        </div>
        <div class="form-group row">
            <label for="Tetno" class="col-sm-2 col-form-label">Tętno</label>
            <div class="col-sm-5">
                <input type="text" name="Tetno" class="form-control" placeholder="Tętno">
            </div>
        </div>
        <div class="form-group row">
            <label for="CisnienieKrwi" class="col-sm-2 col-form-label">Ciśnienie krwi</label>
            <div class="col-sm-5">
                <input type="text" name="CisnienieKrwi" class="form-control" placeholder="Ciśnienie krwi">
            </div>
        </div>
        <div class="form-group row">
            <label for="exampleFormControlSelect1" class="col-sm-2 col-form-label">Niepełnosprawność</label>
            <div class="col-sm-5">
                <select class="form-control" name="Disability">
                    <option value="1">Alarm</option>
                    <option value="2">Dezorientacja</option>
                    <option value="3">Upośledzenie umysłowe</option>
                    <option value="4">Nieprzytomność</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="Temperatura" class="col-sm-2 col-form-label">Temperatura</label>
            <div class="col-sm-5">
                <input type="text" name="Temperatura" class="form-control" placeholder="Temperatura">
            </div>
        </div>
        <br><br>

        <div class="container">
            <ul class="nav nav-pills">
                <li class="active"><a data-toggle="pill" href="#home">Skala Glasgow</a></li>
                <li><a data-toggle="pill" href="#menu1">Skala FOUR</a></li>
            </ul>

            <div class="tab-content">
                <div id="home" class="tab-pane fade in active">
                    <div class="row">
                        <br />
                        <div class="col-sm-4" style="width: 33%">
                            <label for="GCS" class="control-label">Otwieranie oczu</label>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OtwieranieOczu" value="1.4" class="custom-control-input" checked="checked">
                                <label class="custom-control-label" for="customRadioInline1">spontaniczne</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OtwieranieOczu" value="1.3" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline2">na polecenie</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OtwieranieOczu" value="1.2" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline1">na bodźce bólowe</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OtwieranieOczu" value="1.1" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline2">nie otwiera oczu</label>
                            </div>
                        </div>

                        <div class="col-sm-4" style="width: 50%">
                            <label for="GCS" class="control-label">Kontakt slowny</label>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="KontaktSlowny" value="2.5" class="custom-control-input" checked="checked">
                                <label class="custom-control-label" for="customRadioInline1">odpowiedź logiczna, pacjent zorientowany co do miejsca, czasu i własnej osoby</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="KontaktSlowny" value="2.4" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline2">odpowiedź splątana, pacjent zdezorientowany</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="KontaktSlowny" value="2.3" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline1">odpowiedź nieadekwatna, nie na temat lub krzyk</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="KontaktSlowny" value="2.2" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline2">niezrozumiałe dźwięki, pojękiwanie</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="KontaktSlowny" value="2.1" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline2">bez reakcji</label>
                            </div>
                        </div>

                        <br /><br />
                        <div class="col-sm-4" style="width: 50%">
                            <label for="GCS" class="control-label">Reakcja ruchowa</label>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="ReakcjaRuchowa" value="3.6" class="custom-control-input" checked="checked">
                                <label class="custom-control-label" for="ReakcjaRuchowa">spełnianie ruchowych poleceń słownych, migowych</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="ReakcjaRuchowa" value="3.5" class="custom-control-input">
                                <label class="custom-control-label" for="ReakcjaRuchowa">ruchy celowe, pacjent lokalizuje bodziec bólowy</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="ReakcjaRuchowa" value="3.4" class="custom-control-input">
                                <label class="custom-control-label" for="ReakcjaRuchowa">reakcja obronna na ból, wycofanie, próba usunięcia bodźca bólowego</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="ReakcjaRuchowa" value="3.3" class="custom-control-input">
                                <label class="custom-control-label" for="ReakcjaRuchowa">patologiczna reakcja zgięciowa, odkorowanie</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="ReakcjaRuchowa" value="3.2" class="custom-control-input">
                                <label class="custom-control-label" for="ReakcjaRuchowa">patologiczna reakcja wyprostna, odmóżdżenie</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="ReakcjaRuchowa" value="3.1" class="custom-control-input">
                                <label class="custom-control-label" for="ReakcjaRuchowa">bez reakcji</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="menu1" class="tab-pane fade">
                    <div class="row">
                        <br />
                        <div class="col-sm-4" style="width: 33%">
                            <label for="GCS" class="control-label">Otwieranie oczu</label>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OtwieranieOczu2" value="1.4" class="custom-control-input" checked="checked">
                                <label class="custom-control-label" for="customRadioInline1">oczy otwarte, wodzenie i mruganie na polecenie</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OtwieranieOczu2" value="1.3" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline2">oczy otwarte, brak wodzenia na polecenie</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OtwieranieOczu2" value="1.2" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline1">oczy zamknięte, otwarcie na bodziec głosowy</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OtwieranieOczu2" value="1.1" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline2">otwarcie oczu na bodziec bólowy</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OtwieranieOczu2" value="1.0" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline2">brak reakcji na bodziec bólowy</label>
                            </div>
                        </div>

                        <div class="col-sm-4" style="width: 50%">
                            <label for="GCS" class="control-label">Odruchy z pnia mózgu</label>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OdruchyPniaMózgu" value="2.4" class="custom-control-input" checked="checked">
                                <label class="custom-control-label" for="customRadioInline1">obecne odruchy źreniczne i rogówkowe</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OdruchyPniaMózgu" value="2.3" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline2">jedna źrenica szeroka i nieruchoma</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OdruchyPniaMózgu" value="2.2" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline1">nieobecny odruch źreniczny lub rogówkowy</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OdruchyPniaMózgu" value="2.1" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline2">nieobecny odruch źreniczny oraz rogówkowy</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OdruchyPniaMózgu" value="2.0" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline2">nieobecny odruch źreniczny, rogówkowy oraz kaszlowy</label>
                            </div>
                        </div>
                        <br>

                        <div class="col-sm-4" style="width: 50%">
                            <label for="GCS" class="control-label">Odruchy oddychania</label>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OdruchyOddychania" value="4.4" class="custom-control-input" checked="checked">
                                <label class="custom-control-label" for="customRadioInline1">regularny rytm oddechowy, pacjent niezaintubowany</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OdruchyOddychania" value="4.3" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline2">oddech Cheyne-Stokes’a, pacjent niezaintubowany</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OdruchyOddychania" value="4.2" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline1">oddech nieregularny, pacjent niezaintubowany</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OdruchyOddychania" value="4.1" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline2">oddech wspomagany z respiratora</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="OdruchyOddychania" value="4.0" class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline2">oddech zastępczy z respiratora, bezdechy</label>
                            </div>
                        </div>

                        <div class="col-sm-4" style="width: 50%">
                            <label for="GCS" class="control-label">Reakcja ruchowa</label>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="ReakcjaRuchowa2" value="3.4" class="custom-control-input" checked="checked">
                                <label class="custom-control-label" for="ReakcjaRuchowa">spełnianie poleceń</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="ReakcjaRuchowa2" value="3.3" class="custom-control-input">
                                <label class="custom-control-label" for="ReakcjaRuchowa">lokalizacja bólu</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="ReakcjaRuchowa2" value="3.2" class="custom-control-input">
                                <label class="custom-control-label" for="ReakcjaRuchowa">odpowiedź zgięciowa na bodziec bólowy</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="ReakcjaRuchowa" value="3.1" class="custom-control-input">
                                <label class="custom-control-label" for="ReakcjaRuchowa">odpowiedź wyprostna na bodziec bólowy</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="ReakcjaRuchowa2" value="3.0" class="custom-control-input">
                                <label class="custom-control-label" for="ReakcjaRuchowa">brak odpowiedzi na bodziec bólowy, uogólniony stan miokloniczny</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
<br /><br /><br />
<div class="form-group">
    <input type="submit" value="Create" class="btn btn-default" />
</div>
    </form>
</div>



