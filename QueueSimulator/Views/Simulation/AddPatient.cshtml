@model QueueSimulator.Models.Patient

<div class="row">
    <input type="button" value="Dodaj losowego pacjenta" id="AddOneRandom" class="btn btn-default b-color-sa" />
    <input type="button" value="Dodaj pacjenta z bazy" id="AddOneDb" class="btn btn-default b-color-sa" />
    <br><br>

    @using (Html.BeginForm("AddPatient", "Simulation", FormMethod.Post))
    {
        <form id="addForm">


            <div class="form-group row">
                <label for="PatientName" class="col-sm-2 col-form-label">Nazwa pacjenta</label>
                <div class="col-sm-5">
                    <input type="text" name="PatientName" class="form-control" placeholder="Nazwa pacjenta">
                </div>
            </div>
            <fieldset class="form-group">
                <div class="row">
                    <label class="col-sm-2 col-form-label">Płeć</label>
                    <div class="col-sm-5">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Plec" id="Female" value="1" checked>
                            <label class="form-check-label" for="Female">
                                Kobieta
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Plec" id="Male" value="0">
                            <label class="form-check-label" for="Male">
                                Mężczyzna
                            </label>
                        </div>
                    </div>
                </div>
            </fieldset>
            <fieldset class="form-group">
                <div class="row">
                    <label class="col-sm-2 col-form-label">Drożne drogi oddechowe</label>
                    <div class="col-sm-5">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="DrogiOddechowe" id="Drożne" value="1" checked>
                            <label class="form-check-label" for="Drożne">
                                Tak
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="DrogiOddechowe" id="NieDrożne" value="0">
                            <label class="form-check-label" for="NieDrożne">
                                Nie
                            </label>
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="form-group row">
                <label for="CzestoscOddechow" class="col-sm-2 col-form-label">Częstość oddechów</label>
                <div class="col-sm-5">
                    <input type="number" min="0" name="CzestoscOddechow" class="form-control" placeholder="Częstość oddechów">
                </div>
            </div>
            <div class="form-group row">
                <label for="Pulsoksymetria" class="col-sm-2 col-form-label">Pulsoksymetria</label>
                <div class="col-sm-5">
                    <input type="number" min="0" name="Pulsoksymetria" class="form-control" placeholder="Pulsoksymetria">
                </div>
            </div>
            <div class="form-group row">
                <label for="Tetno" class="col-sm-2 col-form-label">Tętno</label>
                <div class="col-sm-5">
                    <input type="number" min="0" name="Tetno" class="form-control" placeholder="Tętno">
                </div>
            </div>
            <div class="form-group row">
                <label for="CisnienieKrwi" class="col-sm-2 col-form-label">Ciśnienie krwi</label>
                <div class="col-sm-5">
                    <input type="number" min="0" name="CisnienieKrwi" class="form-control" placeholder="Ciśnienie krwi">
                </div>
            </div>
            <div class="form-group row">
                <label for="exampleFormControlSelect1" class="col-sm-2 col-form-label">Niepełnosprawność</label>
                <div class="col-sm-5">
                    <select class="form-control" name="Disability">
                        <option value="1">Alarm</option>
                        <option value="2">Dezorientacja</option>
                        <option value="3">Upośledzenie umysłowe</option>
                        <option value="4">Nieprzytomność</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="Temperatura" class="col-sm-2 col-form-label">Temperatura</label>
                <div class="col-sm-5">
                    <input type="number" min="0" name="Temperatura" class="form-control" placeholder="Temperatura">
                </div>
            </div>
            <br><br>

            <div class="container">
                <ul class="nav nav-pills scaleNav">
